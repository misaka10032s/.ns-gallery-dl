{
    "manifest_version": 3,
    "name": "NS gallery-dl extension",
    "version": "1.0",
    "description": "Select and export NS gallery artwork links.",
    "permissions": [
        "activeTab",
        "webRequest",
        "notifications",
        "scripting",
        "clipboardWrite",
        "offscreen"
    ],
    "host_permissions": [
        "https://app-api.pixiv.net/*",
        "https://www.pixiv.net/*",
        "https://accounts.pixiv.net/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.pixiv.net/users/*",
                "https://www.pixiv.net/artworks/*"
            ],
            "js": [
                "pixiv/content.js"
            ],
            "css": [
                "pixiv/style.css"
            ]
        }
    ]
}