{
    "manifest_version": 3,
    "name": "NS gallery-dl extension",
    "version": "1.0",
    "description": "Select and export NS gallery artwork links.",
    "permissions": [
        "activeTab",
        "webRequest",
        "notifications",
        "scripting",
        "clipboardWrite",
        "offscreen"
    ],
    "host_permissions": [
        "http://127.0.0.1:7601/*",
        "https://app-api.pixiv.net/*",
        "https://www.pixiv.net/*",
        "https://accounts.pixiv.net/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.pixiv.net/users/*",
                "https://www.pixiv.net/artworks/*"
            ],
            "js": [
                "pixiv/content.js"
            ],
            "css": [
                "pixiv/style.css"
            ]
        },
        {
            "matches": [
                "https://nhentai.net/*",
                "https://nhentai.net/g/*"
            ],
            "js": [
                "nhentai/content.js"
            ],
            "css": [
                "nhentai/style.css"
            ]
        },
        {
            "matches": [
                "https://wnacg.com/*",
                "https://www.wnacg.com/*"
            ],
            "js": [
                "wnacg/content.js"
            ],
            "css": [
                "wnacg/style.css"
            ]
        },
        {
            "matches": [
                "https://yande.re/post",
                "https://yande.re/post?tags=*"
            ],
            "js": [
                "yande.re/content.js"
            ],
            "css": [
                "yande.re/style.css"
            ]
        }
    ]
}