{
    "manifest_version": 3,
    "name": "NS gallery-dl extension",
    "version": "1.0",
    "description": "Select and export NS gallery artwork links.",
    "permissions": [
        "activeTab",
        "webRequest",
        "notifications",
        "offscreen",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://app-api.pixiv.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.pixiv.net/users/*",
                "https://www.pixiv.net/artworks/*"
            ],
            "js": [
                "pixiv/index.js"
            ],
            "css": [
                "pixiv/style.css"
            ]
        }
    ]
}